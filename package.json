{
  "name": "descope-trust-center",
  "private": true,
  "engines": {
    "node": "^22.21.0",
    "pnpm": "^10.19.0"
  },
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "pnpm -F @descope-trust-center/auth generate",
    "db:push": "turbo -F @descope-trust-center/db push",
    "db:studio": "turbo -F @descope-trust-center/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @descope-trust-center/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@descope-trust-center/prettier-config": "workspace:*",
    "@opencode-ai/sdk": "latest",
    "@playwright/test": "^1.57.0",
    "@turbo/gen": "^2.5.8",
    "@types/node": "catalog:",
    "dotenv-cli": "^10.0.0",
    "prettier": "catalog:",
    "tsx": "^4.19.2",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "prettier": "@descope-trust-center/prettier-config"
}
