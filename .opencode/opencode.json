{
  "plugin": ["oh-my-opencode"],
  "instructions": ["context/**/*.md"],
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@context7/mcp@latest"],
      "env": {}
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "@anthropic/next-devtools-mcp@latest"],
      "env": {}
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-fetch@latest"],
      "env": {}
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-playwright@latest"],
      "env": {}
    }
  }
}
