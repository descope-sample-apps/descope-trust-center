{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "oh-my-opencode"
  ],
  "mcp": {
    "context7": {
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@context7/mcp@latest"
      ],
      "type": "local"
    },
    "next-devtools": {
      "command": [
        "npx",
        "-y",
        "@anthropic/next-devtools-mcp@latest"
      ],
      "enabled": true,
      "type": "local"
    },
    "fetch": {
      "command": [
        "npx",
        "-y",
        "@anthropic/mcp-fetch@latest"
      ],
      "enabled": true,
      "type": "local"
    },
    "playwright": {
      "command": [
        "npx",
        "-y",
        "@anthropic/mcp-playwright@latest"
      ],
      "enabled": true,
      "type": "local"
    }
  }
}
